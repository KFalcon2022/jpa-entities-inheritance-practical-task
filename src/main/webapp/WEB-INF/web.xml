<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns = "https://jakarta.ee/xml/ns/jakartaee"
        xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation = "https://jakarta.ee/xml/ns/jakartaee
        https://jakarta.ee/xml/ns/jakartaee/web-app_6_1.xsd"
        version = "6.1">

    <listener>
        <listener-class>com.walking.inheritance.servlet.listener.AddAttributesContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.walking.inheritance.servlet.listener.DataBaseMigrationContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.walking.inheritance.servlet.listener.StartComingOfAgeJobContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>RequestJsonDeserializerFilter</filter-name>
        <filter-class>com.walking.inheritance.servlet.filter.RequestJsonDeserializerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ResponseJsonSerializerFilter</filter-name>
        <filter-class>com.walking.inheritance.servlet.filter.ResponseJsonSerializerFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RequestJsonDeserializerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ResponseJsonSerializerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>PersonServlet</servlet-name>
        <servlet-class>com.walking.inheritance.servlet.PersonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonGetAllServlet</servlet-name>
        <servlet-class>com.walking.inheritance.servlet.PersonGetAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FamilyServlet</servlet-name>
        <servlet-class>com.walking.inheritance.servlet.FamilyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PersonServlet</servlet-name>
        <url-pattern>/person</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonGetAllServlet</servlet-name>
        <url-pattern>/person/all</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FamilyServlet</servlet-name>
        <url-pattern>/family</url-pattern>
    </servlet-mapping>
</web-app>
